@model ChangePasswordModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <h5 class="card-header">Change Password</h5>
    <div class="card-body">

        <form method="post">
            <input hidden asp-for="UserId"  />
            <div class="form-group row mb-2">
                <label asp-for="PastPassword" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input type="password" asp-for="PastPassword" class="form-control" />
                    <span asp-validation-for="PastPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="NewPassword" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input type="password" asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="NewPasswordAgain" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input type="password" asp-for="NewPasswordAgain" class="form-control" />
                    <span asp-validation-for="NewPasswordAgain" class="text-danger"></span>
                </div>
            </div>
            <div class="clearfix">
                <button type="submit" class="float-end btn btn-primary">
                    Change Password
                </button>
            </div>
        </form>

    </div>
</div>

